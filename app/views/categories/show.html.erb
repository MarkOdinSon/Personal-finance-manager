<div class="mx-auto">
  <h1 class="font-bold text-4xl text-center">Category: <%= @category.id %></h1>
  <div class="flex justify-end">
    <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor" class="w-8 h-8">
      <a xlink:href="<%= "/categories/#{@category.id}/edit" %>">
        <path d="M21.731 2.269a2.625 2.625 0 00-3.712 0l-1.157 1.157 3.712 3.712 1.157-1.157a2.625 2.625 0 000-3.712zM19.513 8.199l-3.712-3.712-8.4 8.4a5.25 5.25 0 00-1.32 2.214l-.8 2.685a.75.75 0 00.933.933l2.685-.8a5.25 5.25 0 002.214-1.32l8.4-8.4z" />
        <path d="M5.25 5.25a3 3 0 00-3 3v10.5a3 3 0 003 3h10.5a3 3 0 003-3V13.5a.75.75 0 00-1.5 0v5.25a1.5 1.5 0 01-1.5 1.5H5.25a1.5 1.5 0 01-1.5-1.5V8.25a1.5 1.5 0 011.5-1.5h5.25a.75.75 0 000-1.5H5.25z" />
      </a>
    </svg>
  </div>

  <div class="inline-block ml-2 flex justify-end">
    <%= button_to 'Delete', category_path(@category), method: :delete, class: "mt-2 rounded-lg py-1 px-2 bg-orange-400 font-medium", data: { turbo_confirm: 'Are you sure you want to delete this category? If you delete then all operations that belong to this CATEGORY also will be DELETED!' } %>
  </div>

  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
  <% end %>

  <div id="operations">

    <p class="my-5">
      <strong class="block font-medium mb-1">Name:</strong>
      <%= @category.name %>
    </p>

    <p class="my-5" style="word-wrap: break-word;">
      <strong class="block font-medium mb-1">Description:</strong>
      <%= @category.description %>
    </p>

  </div>

  <%= link_to "Back to categories", categories_path, class: "rounded-lg py-3 px-5 bg-gray-300 inline-block font-medium" %>
</div>
