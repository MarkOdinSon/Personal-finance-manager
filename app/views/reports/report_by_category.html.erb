<%= render partial: 'reports/report', locals: { name_of_report: @pageTitle } %>

<script type="text/javascript">
    $(document).ready(function() {
        const ctx = document.getElementById('myChartReport');

        new Chart(ctx, {
            type: 'doughnut',
            data: {
                labels: [
                    'Red',
                    'Blue',
                    'Yellow',
                    'Gray'
                ],
                datasets: [{
                    label: 'Report by category',
                    data: [300, 50, 10000, 5000.50],
                    hoverOffset: 4
                }]
            }
        });
    });
</script>
